// tsconfig.json
{
  "compilerOptions": {
    /* ... tus otras opciones ... */
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",

    /* --- LÍNEAS CLAVE PARA LIBRERÍAS --- */
    "declaration": true,          // Genera archivos .d.ts (¡MUY IMPORTANTE!)
    "declarationMap": true,       // Ayuda a "Ir a la definición" en los IDEs.
    "sourceMap": true,            // Genera source maps para facilitar el debugging.

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Asegúrate de que solo compile lo que está en 'src'
  "exclude": ["node_modules", "dist", "examples"] // Excluye carpetas innecesarias
}